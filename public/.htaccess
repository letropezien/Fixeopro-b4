RewriteEngine On

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirection admin vers la page statique
RewriteRule ^admin/?$ /admin.html [L]
RewriteRule ^admin-panel/?$ /admin.html [L]
RewriteRule ^administration/?$ /admin.html [L]
RewriteRule ^admin\.php$ /admin.html [R=301,L]
RewriteRule ^wp-admin/?$ /admin.html [R=301,L]
RewriteRule ^administrator/?$ /admin.html [R=301,L]

# Support des routes Next.js pour le reste
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/admin\.html$
RewriteRule . /index.html [L]

# Headers de sécurité pour admin
<FilesMatch "admin\.html">
    Header set X-Robots-Tag "noindex, nofollow"
    Header set Cache-Control "no-cache, no-store, must-revalidate"
    Header set X-Frame-Options "DENY"
</FilesMatch>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css application/javascript application/json
</IfModule>

# Cache pour les assets
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>
